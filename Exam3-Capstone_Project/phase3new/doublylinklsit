
package exam3.lru.cache;

/**
 * Minimal doubly linked list with O(1) operations required by LRU:
 * - addFirst(node): mark as most recently used (MRU)
 * - remove(node): remove arbitrary node in O(1)
 * - removeLast(): evict least recently used (LRU) node
 */
final class DoublyLinkedList {
    private Node head; // MRU
    private Node tail; // LRU

    void addFirst(Node node) {
        if (node == null) return;
        node.prev = null;
        node.next = head;
        if (head != null) head.prev = node;
        head = node;
        if (tail == null) tail = node; // first insertion
    }

    void remove(Node node) {
        if (node == null) return;
        Node p = node.prev;
        Node n = node.next;

        if (p != null) {
            p.next = n;
        } else {
            head = n; // removing head
        }

        if (n != null) {
            n.prev = p;
        } else {
            tail = p; // removing tail
        }

        node.prev = null;
        node.next = null;
    }

    Node removeLast() {
        if (tail == null) return null;
        Node lru = tail;
        remove(lru);
        return lru;
    }

    Node getHead() { return head; }
    Node getTail() { return tail; }
}
