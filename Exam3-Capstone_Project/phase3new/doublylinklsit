//simplified version of phase2 to show a diff between them. This applies to alll them. Using int now
package exam3.lru.cache;

final class DoublyLinkedList {
    private Node head, tail;
    void addFirst(Node n) {
        if (n == null) return;
        n.prev = null; n.next = head;
        if (head != null) head.prev = n;
        head = n;
        if (tail == null) tail = n;
    }
    void remove(Node n) {
        if (n == null) return;
        Node p = n.prev, x = n.next;
        if (p != null) p.next = x; else head = x;
        if (x != null) x.prev = p; else tail = p;
        n.prev = n.next = null;
    }
    Node removeLast() {
        if (tail == null) return null;
        Node lru = tail; remove(lru); return lru;
    }
    Node getHead() { return head; }
    Node getTail() { return tail; }
}

