
public class SyntaxChecker {

    public static boolean isBalanced(String line) {
        // Create a stack to hold opening symbols.
        Stack<Character> buffer = new ArrayStack<>(line.length());

        // Iterate through each character in the string.
        for (int i = 0; i < line.length(); i++) {
            char ch = line.charAt(i);

            // Push opening symbols to the stack.
            if (ch == '(' || ch == '{' || ch == '[') {
                buffer.push(ch);
            }
            // For closing symbols, check if there's a matching opening symbol.
            else if (ch == ')' || ch == '}' || ch == ']') {
                if (buffer.empty()) {
                    // No matching opening symbol found.
                    return false;
                }

                char open = buffer.pop();

                // Check if the opening and closing symbols match.
                if (!isMatchingPair(open, ch)) {
                    return false;
                }
            }
            // Ignore all other characters.
        }

        // If the stack is empty, all symbols were matched correctly.
        return buffer.empty();
    }

    private static boolean isMatchingPair(char open, char close) {
        return (open == '(' && close == ')') ||
                (open == '{' && close == '}') ||
                (open == '[' && close == ']');
    }

    public static void main(String[] args) {
        String line1 = "public static void main(String[] args) { ... }";      // Expected: true
        String line2 = "int x = (5 + [a * 2]);";                              // Expected: true
        String line3 = "System.out.println('Hello');)";                       // Expected: false
        String line4 = "List list = new ArrayList<{String>();";              // Expected: false
        String line5 = "if (x > 0) {";                                        // Expected: false

        // Output the results.
        System.out.println("Line 1 is balanced: " + isBalanced(line1));
        System.out.println("Line 2 is balanced: " + isBalanced(line2));
        System.out.println("Line 3 is balanced: " + isBalanced(line3));
        System.out.println("Line 4 is balanced: " + isBalanced(line4));
        System.out.println("Line 5 is balanced: " + isBalanced(line5));
    }
}

